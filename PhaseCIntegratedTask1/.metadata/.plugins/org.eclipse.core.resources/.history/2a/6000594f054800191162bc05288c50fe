		DAO dao=new UserDao();
		User u=new User();
		
		//login()Test
		/*
		Scanner sc=new Scanner(System.in);
		Scanner sc2=new Scanner(System.in);
		System.out.print("请输入用户名:");
		String in=sc.next();
		System.out.print("请输入密码：");
		String in2=sc.next();
		dao.login(in, in2);
		*/
		
		/*
		 * add()Test
		 * add User
		 */
		
		u.setId(5);
		u.setName("AA");
		u.setPassword("qwe");
		u.setIntegral(10.2);
		dao.add(u);
		
		
		
		/*
		 * delete()Test
		 * deltet ID 2 User
		 */
		/*
		dao.delete(2);
		*/
	    
		
		/*
